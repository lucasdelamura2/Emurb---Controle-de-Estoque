@model List<EmurbEstoque.Models.Autorizado>
@{
    ViewData["Title"] = "Funções Autorizadas";
    Layout = "~/Views/_Layout.cshtml"; 
}

<h1>Funções Autorizadas (@Model.Count)</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Cadastrar Nova Função
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Função / Cargo</th>
            <th>Ações</th> </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>@item.IdAutorizado</td>
                <td>@item.Funcao</td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.IdAutorizado" class="btn btn-sm btn-outline-warning" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdAutorizado" class="btn btn-sm btn-outline-danger" title="Excluir"
                       onclick="return confirm('Tem certeza que deseja excluir esta função?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>