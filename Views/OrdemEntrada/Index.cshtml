@model List<EmurbEstoque.Models.OrdemEntrada>
@{
    ViewData["Title"] = "Ordens de Entrada";
    Layout = "~/Views/_Layout.cshtml";
    var fornecedores = ViewBag.Fornecedores as Dictionary<int, string>;
}

<h1>Ordens de Entrada (@Model.Count)</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nova Ordem de Entrada
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID da Ordem</th>
            <th>Fornecedor</th>
            <th>Data da Entrada</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.IdOrdEnt</td>
                <td>
                    @(fornecedores != null && fornecedores.ContainsKey(o.FornId) ? fornecedores[o.FornId] : "Não encontrado")
                </td>
                <td>@o.DataEnt.ToString("dd/MM/yyyy")</td> <td>
                    <a asp-action="Details" asp-route-id="@o.IdOrdEnt" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-list-check me-1"></i> Ver Lotes / Adicionar Itens
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>