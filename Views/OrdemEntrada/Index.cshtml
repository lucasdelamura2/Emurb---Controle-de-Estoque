@model List<EmurbEstoque.Models.OrdemEntrada>
@{
    ViewData["Title"] = "Ordens de Entrada";
    Layout = "~/Views/_Layout.cshtml";
    var fornecedores = ViewBag.Fornecedores as Dictionary<int, string>;
}

<h1>Ordens de Entrada</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nova Ordem de Entrada
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID da Ordem</th>
            <th>Fornecedor</th>
            <th>Data da Entrada</th>
            <th>Status</th> <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.IdOrdEnt</td>
                <td>
                    @(fornecedores != null && fornecedores.ContainsKey(o.IdFornecedor) 
                        ? fornecedores[o.IdFornecedor] : "Não encontrado")
                </td>
                <td>@o.DataEnt.ToString("dd/MM/yyyy")</td>
                
                <td>
                    @if(o.Status == "Aberta")
                    {
                        <span class="badge bg-warning text-dark">@o.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@o.Status</span>
                    }
                </td>
                
                <td>
                    <a asp-action="Details" asp-route-id="@o.IdOrdEnt" class="btn btn-sm btn-outline-primary">
                        @if(o.Status == "Aberta")
                        {
                            <i class="bi bi-pencil-square me-1"></i> @:Editar Itens
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i> @:Visualizar
                        }
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>