@model EmurbEstoque.Models.ViewModels.OrdemEntradaDetailsViewModel
@{
    ViewData["Title"] = "Lançar Itens na Ordem";
    Layout = "~/Views/_Layout.cshtml";
    var nomesProdutos = ViewBag.NomesProdutos as Dictionary<int, string>;
    
    // Variável para facilitar a leitura da lógica
    bool isAberta = Model.Ordem.Status == "Aberta";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Ordem de Entrada N°: @Model.Ordem.IdOrdEnt</h1>
    
    @if (isAberta)
    {
        <form asp-action="Concluir" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Ordem.IdOrdEnt" />
            
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar (Salvar Rascunho)
            </a>
            
            <button type="submit" class="btn btn-success" 
                    onclick="return confirm('Tem certeza que deseja CONCLUIR esta ordem? Após concluir, ela não poderá mais ser editada.');">
                <i class="bi bi-check-circle me-1"></i> Concluir e Fechar Ordem
            </button>
        </form>
    }
    else
    {
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Voltar para Lista
        </a>
    }
</div>

<div class="card p-3 mb-4 bg-light border-0 shadow-sm">
    <div class="row">
        <div class="col-md-4">
            <strong>Fornecedor:</strong> @Model.NomeFornecedor
        </div>
        <div class="col-md-4">
            <strong>Data da Entrada:</strong> @Model.Ordem.DataEnt.ToString("dd/MM/yyyy")
        </div>
        <div class="col-md-4">
             <strong>Status:</strong>
            @if(isAberta)
            {
                <span class="badge bg-warning text-dark">Aberta (Editando)</span>
            }
            else
            {
                <span class="badge bg-success">Concluída</span>
            }
        </div>
    </div>
</div>

<hr />

@if (isAberta)
{
    <form asp-action="AdicionarLote" method="post" id="form-add-lote" class="row g-3 p-3 border rounded mb-4">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <h3 class="h5">Adicionar Item (Lote)</h3>   
        <input type="hidden" asp-for="NovoLoteForm.OrdEntId" />

        <div class="col-md-5">
            <label asp-for="NovoLoteForm.ProdutoId" class="form-label"></label>
            <select asp-for="NovoLoteForm.ProdutoId" asp-items="Model.ListaProdutos" class="form-select">
                <option value="">-- Selecione um Produto --</option>
            </select>
            <span asp-validation-for="NovoLoteForm.ProdutoId" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="NovoLoteForm.Qtd" class="form-label"></label>
            <input asp-for="NovoLoteForm.Qtd" type="number" class="form-control" />
            <span asp-validation-for="NovoLoteForm.Qtd" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="NovoLoteForm.Preco" class="form-label"></label>
            <input asp-for="NovoLoteForm.Preco" type="number" step="0.01" class="form-control" placeholder="R$ 0,00" />
            <span asp-validation-for="NovoLoteForm.Preco" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="NovoLoteForm.DataValidade" class="form-label"></label>
            <input asp-for="NovoLoteForm.DataValidade" type="date" class="form-control" />
            <span asp-validation-for="NovoLoteForm.DataValidade" class="text-danger"></span> 
        </div>

        <div class="col-12 text-end">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-plus"></i> Adicionar Lote à Ordem
            </button>
        </div>
    </form>
}
else
{
    <div class="alert alert-success">
        <i class="bi bi-check-circle-fill me-2"></i>
        Esta ordem foi concluída e não pode mais ser editada.
    </div>
}


<h3 class="h5">Itens lançados na Ordem</h3>
<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Preço Custo (Unid.)</th>
            <th>Data de Validade</th>
            
            @if(isAberta)
            {
                <th>Ações</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model.ItensDaOrdem.Count == 0)
        {
            <tr>
                <td colspan="@(isAberta ? 5 : 4)" class="text-center text-muted">Nenhum item adicionado a esta ordem ainda.</td>
            </tr>
        }
        @foreach (var item in Model.ItensDaOrdem)
        {
            <tr>
                <td>
                    @(nomesProdutos != null && nomesProdutos.ContainsKey(item.ProdutoId) ?
                        nomesProdutos[item.ProdutoId] : "Produto Inválido")
                </td>
                <td>@item.Qtd</td>
                <td>@item.Preco.ToString("C2")</td>
                <td>@item.DataValidade?.ToString("dd/MM/yyyy")</td>
                
                @if(isAberta)
                {
                    <td class="text-nowrap">
                        <a asp-controller="OrdemEntrada" asp-action="EditarLote" asp-route-id="@item.IdLote"
                           class="btn btn-sm btn-outline-warning" title="Editar Lote">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        
                        <form asp-action="RemoverLote" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="idLote" value="@item.IdLote" />
                            <input type="hidden" name="idOrdemEntrada" value="@Model.Ordem.IdOrdEnt" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remover Lote"
                                    onclick="return confirm('Tem certeza que deseja remover este lote da ordem?');">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}