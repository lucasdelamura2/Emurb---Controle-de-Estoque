@model List<EmurbEstoque.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
    Layout = "~/Views/_Layout.cshtml";
}

<h1>Fornecedores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Adicionar Fornecedor
    </a>
</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF/CNPJ</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Inscrição Estadual</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.IdFornecedor</td>
                <td>@f.Nome</td>
                <td>@f.CpfCnpj</td>
                <td>@f.Email</td>
                <td>@f.Telefone</td>
                <td>@f.InscricaoEstadual</td>
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@f.IdPessoa" class="btn btn-sm btn-outline-primary" title="Detalhes">
                        <i class="bi bi-search"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@f.IdPessoa" class="btn btn-sm btn-outline-warning" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@f.IdPessoa" class="btn btn-sm btn-outline-danger" title="Excluir"
                       onclick="return confirm('Tem certeza que deseja excluir este fornecedor?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>