@model List<EmurbEstoque.Models.Produto>
@{
    ViewData["Title"] = "Cadastro de Produtos";
    Layout = "~/Views/_Layout.cshtml";
}

<h1>Produtos Cadastrados (@Model.Count)</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Cadastrar Novo Produto
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Ações</th> </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdProduto</td>
                <td>@p.Nome</td>
                <td>@p.Descricao</td>
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@p.IdProduto" class="btn btn-sm btn-outline-primary" title="Detalhes">
                        <i class="bi bi-search"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@p.IdProduto" class="btn btn-sm btn-outline-warning" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@p.IdProduto" class="btn btn-sm btn-outline-danger" title="Excluir"
                       onclick="return confirm('Tem certeza que deseja excluir este produto?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>