@model List<EmurbEstoque.Models.Autorizacao>
@{
    ViewData["Title"] = "Autorizações";
    Layout = "~/Views/_Layout.cshtml";
    var nomesAutorizados = ViewBag.NomesAutorizados as Dictionary<int, string>;
    var nomesLocais = ViewBag.NomesLocais as Dictionary<int, string>;
}

<h1>Autorizações (Função x Local)</h1>
<p>
    <a class="btn btn-primary" href="/Autorizacao/Create">
        <i class="bi bi-plus-circle me-1"></i> Criar Nova Autorização
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Função Autorizada</th>
            <th>Local de Destino</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(nomesAutorizados.GetValueOrDefault(item.AutorizadoId, "???"))
                </td>
                <td>
                    @(nomesLocais.GetValueOrDefault(item.LocalId, "???"))
                </td>
            </tr>
        }
    </tbody>
</table>