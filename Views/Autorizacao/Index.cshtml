@model List<EmurbEstoque.Models.Autorizacao>
@{
    ViewData["Title"] = "Autorizações";
    Layout = "~/Views/_Layout.cshtml";
    var nomesAutorizados = ViewBag.NomesAutorizados as Dictionary<int, string>;
    var nomesLocais = ViewBag.NomesLocais as Dictionary<int, string>;
    bool isAdmin = Context.Session.GetString("IsAdmin") == "True";
}

<h1>Autorizações (Função x Local)</h1>
<p class="d-flex gap-2">

    @if (isAdmin)
    {
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Cadastrar Autorização
    </a>
    }
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar para Principal
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Função Autorizada</th>
            <th>Local de Destino</th>
            @if (isAdmin)
            {
            <th>Ações</th> 
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(nomesAutorizados != null && nomesAutorizados.ContainsKey(item.AutorizadoId) ? nomesAutorizados[item.AutorizadoId] : "Função não encontrada")
                </td>
                <td>
                    @(nomesLocais != null && nomesLocais.ContainsKey(item.LocalId) ? nomesLocais[item.LocalId] : "Local não encontrado")
                </td>
                @if (isAdmin)
                {
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.IdAutoriza" class="btn btn-sm btn-warning" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdAutoriza" class="btn btn-sm btn-danger" title="Excluir"
                       onclick="return confirm('Tem certeza que deseja excluir esta autorização?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>