@model List<EmurbEstoque.Models.ViewModels.EstoqueViewModel>
@{
    ViewData["Title"] = "Saldo Atual do Estoque";
    Layout = "~/Views/_Layout.cshtml"; 
}

<h1>Saldo Atual do Estoque</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Nenhum item com estoque registrado no momento.</div>
}
else
{
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Produto</th>
                <th class="text-end">Quantidade Atual</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NomeProduto</td>
                    <td class="text-end">@item.Quantidade</td>
                </tr>
            }
        </tbody>
        <tfoot>
             <tr>
                <td colspan="2">Total de produtos listados: @Model.Count</td>
            </tr>
        </tfoot>
    </table>
}
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">
