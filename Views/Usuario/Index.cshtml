@model List<EmurbEstoque.Models.Usuario>
@{
    ViewData["Title"] = "Gerenciamento de Usuários";
    Layout = "~/Views/_Layout.cshtml";
    var nomesFuncionarios = ViewBag.NomesFuncionarios as Dictionary<int, string>;
}

<h1>Usuários</h1>

<p class="d-flex gap-2">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Novo Usuário
    </a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar para Principal
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>E-mail (Login)</th>
            <th>Funcionário Vinculado</th>
            <th>Admin?</th>
            <th>Ativo?</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @* Busca o nome do funcionário no ViewBag *@
                    @(nomesFuncionarios != null && user.FuncionarioId.HasValue && nomesFuncionarios.ContainsKey(user.FuncionarioId.Value)
                        ? nomesFuncionarios[user.FuncionarioId.Value]
                        : "Não vinculado")
                </td>
                <td>
                    @if(user.IsAdmin)
                    {
                        <span class="badge bg-danger">Sim</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Não</span>
                    }
                </td>
                <td>
                    @if(user.IsAtivo)
                    {
                        <span class="badge bg-success">Sim</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Não</span>
                    }
                </td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@user.IdUsuario" class="btn btn-sm btn-outline-warning" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>

                    <a asp-action="Delete" asp-route-id="@user.IdUsuario" class="btn btn-sm btn-outline-danger" title="Excluir"
                       onclick="return confirm('Tem certeza?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>