@model EmurbEstoque.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuário";
    Layout = "~/Views/_Layout.cshtml";
}

<h1 class="mb-4">Editar Usuário: @Model.Email</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <input type="hidden" asp-for="IdUsuario" />

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="col-md-6">
            <label asp-for="FuncionarioId" class="form-label"></label>
            <select asp-for="FuncionarioId" asp-items="ViewBag.ListaFuncionarios" class="form-select">
                <option value="">-- Vincular a um Funcionário --</option>
            </select>
            <span asp-validation-for="FuncionarioId" class="text-danger"></span>
        </div>

        <div class="col-12 mt-4">
            <div class="form-check form-switch">
                <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
                <label asp-for="IsAdmin" class="form-check-label"></label>
            </div>
            <div class="form-check form-switch">
                <input asp-for="IsAtivo" class="form-check-input" type="checkbox" />
                <label asp-for="IsAtivo" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save me-1"></i> Salvar Alterações
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle me-1"></i> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}