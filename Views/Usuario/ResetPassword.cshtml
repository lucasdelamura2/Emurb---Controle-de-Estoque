@model EmurbEstoque.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Redefinir Senha";
    Layout = "~/Views/_Layout.cshtml";
}

<h1 class="mb-4">Redefinir Senha</h1>
<p class="lead">Você está alterando a senha para o usuário: <strong>@Model.Email</strong></p>

<form asp-action="ResetPassword" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <input type="hidden" asp-for="IdUsuario" />
    <input type="hidden" asp-for="Email" />

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="NovaSenha" class="form-label"></label>
            <input asp-for="NovaSenha" class="form-control" />
            <span asp-validation-for="NovaSenha" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ConfirmarSenha" class="form-label"></label>
            <input asp-for="ConfirmarSenha" class="form-control" />
            <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-key-fill me-1"></i> Redefinir Senha
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle me-1"></i> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}