@model List<EmurbEstoque.Models.Funcionario>

<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body class="container-fluid">
  <h1>Funcion√°rios</h1>
  <p>@Model.Count</p>

  <table class="table table-hover">
    <thead><tr><th>Id</th><th>Nome</th><th>CPF</th><th>Nascimento</th><th></th></tr></thead>
    <tbody>
    @foreach (var f in Model)
    {
      <tr>
        <td>@f.Id</td>
        <td>@f.Nome</td>
        <td>@f.CPF</td>
        <td>@f.DataNascimento.ToString("dd/MM/yyyy")</td>
        <td class="text-nowrap">
          <a class="btn btn-sm btn-outline-primary" href="/Funcionario/Details/@f.Id">Detalhes</a>
          <a class="btn btn-sm btn-outline-warning" href="/Funcionario/Edit/@f.Id">Editar</a>
          <a class="btn btn-sm btn-outline-danger" href="/Funcionario/Delete/@f.Id">Excluir</a>
        </td>
      </tr>
    }
    </tbody>
  </table>

  <a class="btn btn-primary" href="/Funcionario/Create">Adicionar</a>
</body>
</html>