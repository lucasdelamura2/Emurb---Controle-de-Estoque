@model List<EmurbEstoque.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionários";
    Layout = "~/Views/_Layout.cshtml";
    
    bool isAdmin = Context.Session.GetString("IsAdmin") == "True";
}

<h1>Funcionários</h1> 

@if(TempData["Error"] != null) {
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p class="d-flex gap-2">
    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Cadastrar Funcionário
        </a>
    }
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar para Principal
    </a>
</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF/CNPJ</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Cargo</th>
            <th>Setor</th>
            
            @if (isAdmin)
            {
                <th>Ações</th>
            }
        </tr>
    </thead>
    <tbody>
    @foreach (var f in Model)
    {
        <tr>
            <td>@f.IdPessoa</td> <td>@f.Nome</td>
            <td>@f.CpfCnpj</td>
            <td>@f.Email</td>
            <td>@f.Telefone</td>
            <td>@f.Cargo</td>
            <td>@f.Setor</td>

            @if (isAdmin)
            {
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@f.IdPessoa" class="btn btn-sm btn-primary" title="Detalhes">
                        <i class="bi bi-search"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@f.IdPessoa" class="btn btn-sm btn-warning" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@f.IdPessoa" class="btn btn-sm btn-danger" title="Excluir"
                       onclick="return confirm('Tem certeza que deseja excluir este funcionário?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            }
        </tr>
    } </tbody>
</table>