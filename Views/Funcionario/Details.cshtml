@model EmurbEstoque.Models.Funcionario
@{ ViewData["Title"] = "Detalhes"; Layout = "_Layout"; }
<h1>Detalhes</h1>
<table class="table">
  <tr><th>Id</th><td>@Model.Id</td></tr>
  <tr><th>Nome</th><td>@Model.Nome</td></tr>
  <tr><th>CPF</th><td>@Model.CPF</td></tr>
  <tr><th>Nascimento</th><td>@Model.DataNascimento.ToString("dd/MM/yyyy")</td></tr>
</table>
<a class="btn btn-secondary" href="@Url.Action("Index","Funcionario")">Voltar</a>