@model EmurbEstoque.Models.Funcionario
@{
    ViewData["Title"] = "Adicionar Funcionário";
    Layout = "~/Views/_Layout.cshtml";
}
<h1 class="mb-4">Adicionar Funcionário</h1>

<form asp-action="Create" method="post" id="form-func">
  <div class="mb-3">
    <label class="form-label" for="Nome">Nome</label>
    <input class="form-control" id="Nome" name="Nome" />
  </div>

  <div class="mb-3">
    <label class="form-label" for="CPF">CPF</label>
    <input class="form-control" id="CPF" name="CPF" />
  </div>

  <div class="mb-3">
    <label class="form-label" for="DataNascimento">Data de Nascimento</label>
    <input class="form-control" id="DataNascimento" name="DataNascimento" type="date" />
  </div>

  <button type="submit" class="btn btn-primary">
    <i class="bi bi-save me-1"></i> Incluir Funcionário
  </button>
  <a class="btn btn-outline-secondary" href="@Url.Action("Index","Funcionario")">
    <i class="bi bi-x-circle me-1"></i> Cancelar
  </a>
</form>