@model List<EmurbEstoque.Models.OrdemSaida>
@{
    ViewData["Title"] = "Ordens de Saída";
    Layout = "~/Views/_Layout.cshtml"; 
    var nomesFuncionarios = ViewBag.NomesFuncionarios as Dictionary<int, string>;
    var autorizacoes = ViewBag.Autorizacoes as Dictionary<int, string>;
}

<h1>Ordens de Saída</h1>
<p>
    <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle me-1"></i> Nova Ordem de Saída
    </a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar para Principal
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID da Ordem</th>
            <th>Data da Saída</th>
            <th>Funcionário Requisitante</th>
            <th>Autorização (Função -> Local)</th>
            <th>Status</th> <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model) 
        {
            <tr>
                <td>@o.IdOrdSai</td>
                <td>@o.DataSaida.ToString("dd/MM/yyyy")</td>
                <td>
                    @(nomesFuncionarios != null && nomesFuncionarios.ContainsKey(o.IdFuncionario) ? nomesFuncionarios[o.IdFuncionario] : "Funcionário não encontrado")
                </td>
                <td>
                    @(autorizacoes != null && autorizacoes.ContainsKey(o.AutorizaId) ? autorizacoes[o.AutorizaId] : "Autorização não encontrada")
                </td>
                
                <td>
                    @if(o.Status == "Aberta")
                    {
                        <span class="badge bg-warning text-dark">@o.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@o.Status</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@o.IdOrdSai" class="btn btn-sm btn-primary">
                        @if(o.Status == "Aberta")
                        {
                            <i class="bi bi-pencil-square me-1"></i> @:Editar Itens
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i> @:Visualizar
                        }
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>